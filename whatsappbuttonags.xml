<extension type="plugin" version="3.0" group="system" method="upgrade">
	<name>System - whatsappbuttonags</name>
	<author>Alvin Gil Saldaña </author>
	<creationDate>Nov 2023</creationDate>
	<copyright>Copyright © 2023 - All rights reserved.</copyright>
	<license>GNU General Public License v2.0</license>
	<authorEmail>alvin_gil@hotmail.com</authorEmail>
	<authorUrl>https://github.com/alvinalvin</authorUrl>
	<version>1.0.0</version>
	<description>whatsappbuttonags</description>

	<files>
		<filename plugin="whatsappbuttonags">whatsappbuttonags.php</filename>
		<filename>index.html</filename>
		<filename>whatsappbuttonags.xml</filename>
		<folder>assets</folder>


	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="numberphone" type="text" default="67055843" label="Phone Number"/>
				<field name="msj" type="text" default="Welcome To jQueryScript.Net" label="Popup Message"/>
				<field name="headerTitle" type="text" default="jQuery Floating WhatsApp" label="Header Title"/>
				<field name="sendMsg" type="text" default="Enviar uma mensagem" label="Mensagem"/>				
				<field name="popup" type="radio" default="0" label="Show Popup" description="">
			  <option value="0">true</option>
			  <option value="1">false</option>
			  </field>
				<field name="position" type="radio" default="0" label="Position" description="">
			  <option value="0">Right</option>
			  <option value="1">Left</option>
			  </field>
				<field name="background" default="#E5DDD5" type="color" label="background color"/>
				<field name="headerColor" default="#128C7E" type="color" label="header Color"/>
			</fieldset>
		</fields>
	</config>
	<updateservers>
	<server type="extension" name="whatsappbuttonags">https://alvinalvin.github.io/updateserver.github.io/whatsapp.xml</server>
</updateservers>
</extension>
